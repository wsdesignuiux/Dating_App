<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.wolfsoft3.dating_app.Match">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/left_arrow" />

            <TextView
                android:id="@+id/toolbar_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="Match"
                android:textColor="@color/orange"
                android:textSize="15.3sp" />


        </android.support.v7.widget.Toolbar>
    </android.support.v7.widget.CardView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp">


    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="142dp"
        android:layout_height="142dp"
        app:riv_oval="true"
        app:riv_border_color="#a3000000"
        app:riv_border_width="0.7dp"
        android:layout_marginLeft="60dp"
        android:src="@drawable/bedroom_color_ful_girl_01"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="142dp"
            android:layout_height="142dp"
            app:riv_oval="true"
            android:layout_gravity="center"
            app:riv_border_color="#a3000000"
            app:riv_border_width="0.7dp"
            android:layout_marginLeft="70dp"
            android:src="@drawable/bedroom_color_ful01"/>

    </FrameLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="11dp"
    android:orientation="horizontal">

    <TextView
        android:fontFamily="@font/roboto_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12.7sp"
        android:layout_marginLeft="100dp"
        android:textColor="#1b1b1b"
        android:text="Jasmine Joe"/>

    <TextView
        android:fontFamily="@font/roboto_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12.7sp"
        android:gravity="center"
        android:layout_marginRight="30dp"
        android:textColor="#1b1b1b"
        android:text="Peter Doe"/>

</LinearLayout>


    <TextView
        android:fontFamily="@font/roboto_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:textColor="@color/orange"
        android:text="You &amp; Me"/>

    <TextView
        android:fontFamily="@font/roboto_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18.7sp"
        android:layout_gravity="center"
        android:textColor="@color/orange"
        android:text="See our match !!!"/>


</LinearLayout>
