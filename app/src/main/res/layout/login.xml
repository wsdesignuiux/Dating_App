<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.wolfsoft3.dating_app.Login">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="Destino"
        android:textColor="@color/black"
        android:textSize="26sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="344dp"
            android:layout_height="344dp"
            android:layout_gravity="center"
            android:src="@drawable/destino_login" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="85dp"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:text="Dating with every one in the world \nby Character"
            android:textColor="@color/c4c4c4"
            android:textSize="12.3sp" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/googleBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="44.4dp"
        android:layout_marginRight="44.4dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:background="@drawable/google_login_ract">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/google"/>

        <TextView
            android:fontFamily="@font/roboto_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN WITH GOOGLE"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="16.7sp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="44.4dp"
        android:layout_marginRight="44.4dp"
        android:layout_marginTop="20.7dp"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:background="@drawable/facebook_login_ract">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:src="@drawable/facebook"/>

        <TextView
            android:fontFamily="@font/roboto_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN WITH GOOGLE"
            android:layout_marginLeft="12dp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="16.7sp"/>

    </LinearLayout>
</LinearLayout>
</ScrollView>
