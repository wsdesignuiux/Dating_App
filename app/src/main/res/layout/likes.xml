<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.wolfsoft3.dating_app.Likes">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar_likes" />

    </android.support.v7.widget.CardView>


    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout_likes"
        android:layout_width="match_parent"
        app:tabIndicatorHeight="0dp"
        app:tabSelectedTextColor="@color/orange"
        app:tabTextColor="#d4d4d4"
        app:tabTextAppearance="@style/MyMenuTextAppearance1"
        android:layout_height="wrap_content"/>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_likes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</LinearLayout>
